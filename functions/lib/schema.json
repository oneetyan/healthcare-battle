{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "DailyMetrics": {
            "properties": {
                "id": {
                    "type": "string",
                    "pattern": "^[A-Za-z0-9_-]{1,100}$"
                },
                "date": {
                    "type": "string",
                    "format": "date"
                },
                "metrics": {
                    "type": "object",
                    "properties": {
                        "steps": {
                            "type": "integer",
                            "minimum": 0
                        },
                        "distance": {
                            "type": "number",
                            "minimum": 0
                        },
                        "floors_climbed": {
                            "type": "integer",
                            "minimum": 0
                        }
                    }
                }
            },
            "required": ["id", "date", "metrics"],
            "additionalProperties": false
        }
    }
}
